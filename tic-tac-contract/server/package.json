{
  "name": "tic-tac-contract",
  "version": "1.0.0",
  "description": "Tic Tac Toe game using Koa.js, TypeScript, Vue.js and boardgame.io",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch"
  },
  "dependencies": {
    "@gala-chain/api": "2.3.*",
    "@gala-chain/client": "2.3.*",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "boardgame.io": "^0.50.2",
    "dotenv": "^16.4.7",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.13.10",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.3",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^20.8.2",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.2.2"
  }
}
