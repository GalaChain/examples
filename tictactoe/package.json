{
  "name": "tictactoe",
  "version": "1.0.0",
  "description": "Tic Tac Toe game using Koa.js, TypeScript, Vue.js and boardgame.io",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:client": "vite",
    "build:client": "vue-tsc && vite build",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "boardgame.io": "^0.50.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/koa": "^2.13.10",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.3",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^20.8.2",
    "@vitejs/plugin-vue": "^4.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vue-tsc": "^1.8.15"
  }
}
